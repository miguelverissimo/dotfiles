# vi: ft=bash

ss() {
  tmux new-window -n log
  tmux split-window -vp 30
  tmux send-keys -t 1 'nix-shell' Enter
  tmux send-keys -t 1 'bundle exec rails server' Enter
  tmux send-keys -t 2 'nix-shell' Enter
  tmux send-keys -t 2 'bundle exec rails console' Enter
  tmux last-window
  tmux send-keys 'nix-shell' Enter
  tmux send-keys 'nvim' Enter
}
